/* pages/order/order.wxss */
page{
  height: 100%;
  width: 100%;
}
.order_content{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
}
.order_nav{
  display: flex;
  position: fixed;
  height: 100rpx;
  width: 100%;
  top: 0;
}
.nav_item{
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
}
.active{
  color: rgb(245, 83, 24);
  font-weight: bold;
  font-size: large;
}
/* 订单列表 */
.orders{
  flex:1;
  width: 100%;
  margin-top: 100rpx;
  background-color: rgb(245,245,244);
}
scroll-view{
  width: 100%;
  height: 1348rpx;
}
/* 单个订单 */
.order_item{
  height: 300rpx;
  width: 98%;
  margin-left: 1%;
  margin-top: 20rpx;
  background-color: white;
  border-radius: 30rpx;
}
.item_top{
  display: flex;
  height: 200rpx;
  width: 100%;
}
.top_midd{
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 100%;
  margin-left: 15rpx;
}
.midd_top{
  height: 50rpx;
  font-weight: bold;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.midd_bottom{
  flex: 1;
  color: rgb(153, 150, 150);
  font-size: small;
}
.top_rigth{
  height: 100%;
  width: 140rpx;
  margin-right: 30rpx;
  text-align: right;
}
.right_top{
  height: 50rpx;
  margin-top: 20rpx;
  font-weight: bold;
  line-height: 50rpx;
  color: orangered;
}
.right_bottom{
  flex: 1;
  color: rgb(153, 150, 150);
  text-align: right;
}
.item_top image{
  height: 100%;
  width: 200rpx;
  border-radius: 20rpx;
}
.item_bottom{
  display: flex;
  flex-direction: row-reverse;
  height: 100rpx;
  width: 100%;
}
.bottom_btn{
  height: 60rpx;
  width: 160rpx;
  margin-top: 17rpx;
  margin-right: 20rpx;
  border: 2rpx solid rgb(201, 198, 198);
  border-radius: 45rpx;
  text-align: center;
  line-height: 60rpx;
}