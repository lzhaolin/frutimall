/* pages/fruitdetail/fruitdetail.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: rgb(233, 238, 236);
}
.fruitdetail{
  height: 100%;
  width: 100%;
}
.detailImg{
  height: 750rpx;
  width: 100%;
}
.detailImg image{
  width: 100%;
  height: 100%;
}
/* 水果详细信息 */
.detailtitle{
  height: 200rpx;
  width: 100%;
  background-color: rgb(253, 253, 253);
}
.fruitTitle{
  height: 100rpx;
  width: 100%;
}
.fruitprice{
  height: 100rpx;
  width: 100%;
  color: orange;
  font-weight: bold;
}
.select{
  height: 200rpx;
  width: 100%;
  margin-top: 30rpx;
  background-color: rgb(253, 253, 253);
}
.selectTop{
  display: flex;
  height: 100rpx;
  width: 100%;
}
.selectTop view{
  height: 100%;
  flex: 1;
  line-height: 100rpx;
}
/* 规格 */
.selectTop image{
  height: 40%;
  width: 40rpx;
  margin-right: 20rpx;
}
.selectBotton{
  height: 100rpx;
  width: 100%;
}
/* 详情 */
.detail{
  height: 850rpx;
  width: 100%;
  margin-top: 30rpx;
  background-color: rgb(253, 253, 253);
}
.xiangqing{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  font-weight: bold;
}
.detail image{
  height: 90%;
  width: 90%;
  margin-left: 37.5rpx;
}
/* 底部导航 */
.bottonTab{
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 102rpx;
  border-top: 2rpx solid gainsboro;
  background-color: white;
}
.bottonTab image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 25rpx;
}
.icon1{
  height: 100%;
  width: 100rpx;
}
.icon1 view{
  height: 50rpx;
  width: 100%;
  text-align: center;
}
.icon2{
  height: 100%;
  width: 100rpx;
}
.icon2 view{
  height: 50rpx;
  width: 100%;
  text-align: center;
}
.icon3{
  display: flex;
  height: 100%;
  flex: 1;
}
.icon3left{
  height: 76%;
  margin-left: 20rpx;
  margin-top: 2%;
  flex: 1;
  text-align: center;
  line-height: 76rpx;
  color: white;
  background-color: rgb(254,208,53);
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.icon3right{
  height:76%;
  margin-right: 20rpx;
  margin-top: 2%;
  flex: 1;
  text-align: center;
  line-height: 76rpx;
  color: white;
  background-color: rgb(255,113,1);
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}